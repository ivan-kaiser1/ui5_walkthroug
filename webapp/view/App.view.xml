<mvc:View
    controllerName="ui5_walkthroug.controller.App"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc">

    <Button 
        text="{i18n>showHelloButtontext}"
        type="Reject"
        press="onClickMe"
    ></Button>
    <Input 
        value="{/terms/name2}"
        description="Hello {/terms/name2}!"
        valueLiveUpdate="true"
        width="60%"
    ></Input>

<FlexBox >  
    <Text 
        wrapping="true"
        width="50%"
    ></Text>

    <Label  text="{i18n>person}"></Label>
    <Input  value="{/personen/Vorname} {/personen/Nachname}"></Input>
</FlexBox>
</mvc:View>