<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Dialog id="myDialog" title="Demo Dialog">
        <!-- <beginButton>
            <Button text="OK" press="onCloseDialog"/>
        </beginButton> -->
        <buttons>
            <Button text="OK" press="onCloseDialog"/>
            <Button text="Not Ok" press="onCloseDialogNotOk"/>
        </buttons>
        <Label text="Label in einem Fragment" class="sapUiSmallMargin"/>

        <Input id="inputInFragment" placeholder="Input im Fragment" class="sapUiSmallMargin" width="15rem"/>

        <Button text="Hallo SAPUI5" class="sapUiSmallMargin" />

        <IconTabBar id="idIconTabBarMulti" expanded="{device>/isNoPhone}" class="sapUiResponsiveContentPadding">
            <items>
                <IconTabFilter icon="sap-icon://hint" key="info">
                    <Text text="Info content goes here ..." />
                </IconTabFilter>
                <IconTabFilter icon="sap-icon://attachment" key="attachments" count="3">
                    <Text text="Attachments go here ..." />
                </IconTabFilter>
                <IconTabFilter icon="sap-icon://notes" key="notes" count="12">
                    <Text text="Notes go here ..." />
                </IconTabFilter>
                <IconTabFilter icon="sap-icon://group" key="people">
                    <Text text="People content goes here ..." />
                </IconTabFilter>
            </items>
        </IconTabBar>
    </Dialog>
</core:FragmentDefinition >

