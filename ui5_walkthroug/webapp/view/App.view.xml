<mvc:View
  controllerName="ui5walkthroug.controller.App"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns:m="sap.m"
  displayBlock="true">

  <m:Page id="myPage"title="{i18n>title}">
    <m:Table
      id="businessPartnerTable"
      items="{/BusinessPartnerSet}"
      mode="SingleSelectMaster"
      growing="true">

      <m:columns>
        <m:Column id="myColumn"  width="12em">
          <m:Text id="myText" text="{i18n>companyName}" />
        </m:Column>
      </m:columns>

      <m:items>
        <m:ColumnListItem id="myColumnListitem">
          <m:cells>
            <m:Text id="CompanyName" text="{CompanyName}" />
          </m:cells>
        </m:ColumnListItem>
      </m:items>

    </m:Table>
  </m:Page>
</mvc:View>